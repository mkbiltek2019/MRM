                  toastr.success('Floor Updated Successfully Successfully');
            }
            $("#dropdownmenuuser").click(function () {
                $("#dropdownmenuuser").toggleClass('open');
            });
            $('.tblFloor').DataTable({
                'paging': true,
                'lengthChange': true,
